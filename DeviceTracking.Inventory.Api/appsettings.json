{
  "ConnectionStrings": {
    "InventoryDb": "Server=(localdb)\\mssqllocaldb;Database=DeviceTracking_Inventory;Trusted_Connection=True;MultipleActiveResultSets=true",
    "DeviceTrackingDb": "Server=(localdb)\\mssqllocaldb;Database=DeviceTracking;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "InventorySettings": {
    "DefaultLocationId": "warehouse-001",
    "LowStockThreshold": 10,
    "ReorderPointMultiplier": 1.5,
    "AutoReorderEnabled": true,
    "BarcodeScanTimeout": 30
  },
  "QuickBooksSettings": {
    "CompanyFilePath": "C:\\QuickBooks\\Company Files\\Sample.qbw",
    "ApplicationName": "Device Tracking Inventory System",
    "ApplicationId": "your-app-id",
    "ConnectionType": "SingleUser",
    "RequestTimeout": 300,
    "MaxRetries": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DeviceTracking.Inventory": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/inventory-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      }
    ]
  }
}